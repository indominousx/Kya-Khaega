{
    "version": 2,
    "builds": [
      { "src": "backend/app.py", "use": "@vercel/python", "config": { "maxLambdaSize": "100mb" } },
      { "src": "frontend/package.json", "use": "@vercel/static-build", "config": { "installCommand": "npm install", "buildCommand": "npm run build", "outputDirectory": "build" } }
    ],
    "rewrites": [
      { "source": "/api/(.*)", "destination": "/backend/app.py" },
      { "source": "/(.*)", "destination": "/frontend/build/index.html" }
    ]
}